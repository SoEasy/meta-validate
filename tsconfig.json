{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "newLine": "LF",
    "sourceMap": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "lib": [
      "dom",
      "es7"
    ],
    "baseUrl": "./src"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "files": [
    "src/index.ts"
  ]
}
